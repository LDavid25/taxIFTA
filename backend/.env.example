# ===================================
# IFTA Easy Tax - Environment Variables
# ===================================
# Copy this file to .env and update the values
# ===================================

# =====================
# Application Settings
# =====================
NODE_ENV=development                       # Application environment: development, test, production
PORT=5000                                 # Port to run the server on
HOST=0.0.0.0                             # Host to bind the server to
API_PREFIX=/api/v1                        # API route prefix

# =====================
# Database Configuration
# =====================
DB_HOST=localhost                         # Database host
DB_PORT=5432                             # Database port
DB_NAME=ifta_easy_tax                    # Database name
DB_USER=postgres                         # Database username
DB_PASSWORD=your_secure_password         # Database password
DB_SSL=false                             # Enable SSL for database connection
DB_LOGGING=false                         # Enable SQL query logging (true/false/query)
DB_POOL_MAX=10                           # Maximum number of connections in pool
DB_POOL_MIN=0                            # Minimum number of connections in pool
DB_POOL_ACQUIRE=30000                    # Maximum time (ms) to acquire a connection
DB_POOL_IDLE=10000                       # Maximum time (ms) a connection can be idle

# =====================
# JWT Authentication
# =====================
JWT_SECRET=your_64_character_jwt_secret_here  # Secret key for JWT signing
JWT_EXPIRES_IN=90d                       # JWT token expiration (e.g., 15m, 24h, 7d, 90d)
JWT_COOKIE_EXPIRES=90                    # Cookie expiration in days
JWT_COOKIE_HTTP_ONLY=true                # HTTP only cookie flag
JWT_COOKIE_SECURE=false                  # Only send cookie over HTTPS (set true in production)
JWT_COOKIE_SAME_SITE=lax                 # Cookie SameSite attribute

# =====================
# Security
# =====================
RATE_LIMIT_WINDOW_MS=900000               # Rate limiting window in milliseconds (15 minutes)
RATE_LIMIT_MAX=100                       # Max requests per window per IP
CORS_ORIGIN=http://localhost:3000         # Allowed CORS origins (comma-separated)
TRUST_PROXY=1                            # Trust proxy headers (1 for single, 2 for multiple)

# =====================
# Logging
# =====================
LOG_LEVEL=info                           # Log level: error, warn, info, http, verbose, debug, silly
LOG_DIR=./logs                           # Directory to store log files
LOG_MAX_SIZE=20m                         # Maximum log file size
LOG_MAX_FILES=14d                        # Maximum number of days to keep logs

# =====================
# Email Configuration
# =====================
EMAIL_ENABLED=false                      # Enable/disable email sending
EMAIL_HOST=smtp.example.com             # SMTP server hostname
EMAIL_PORT=587                           # SMTP server port
EMAIL_SECURE=false                       # Use TLS (true for 465, false for other ports)
EMAIL_USER=your_email@example.com       # SMTP username
EMAIL_PASSWORD=your_email_password       # SMTP password
EMAIL_FROM="IFTA Easy Tax <noreply@example.com>"  # Sender email address

# =====================
# Frontend URLs
# =====================
FRONTEND_URL=http://localhost:3000        # Frontend application URL
PASSWORD_RESET_URL=/auth/reset-password  # Password reset URL path
EMAIL_VERIFICATION_URL=/auth/verify-email # Email verification URL path

# =====================
# File Uploads
# =====================
UPLOAD_DIR=./uploads                     # Directory to store uploaded files
MAX_UPLOAD_SIZE=10                      # Maximum file upload size in MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf  # Allowed MIME types

# =====================
# Feature Flags
# =====================
FEATURE_EMAIL_VERIFICATION=true          # Enable email verification
FEATURE_PASSWORD_RESET=true             # Enable password reset
FEATURE_MAINTENANCE_MODE=false          # Enable maintenance mode
FEATURE_API_DOCS=true                   # Enable API documentation

# =====================
# Monitoring & Analytics
# =====================
SENTRY_DSN=                              # Sentry DSN for error tracking
NEW_RELIC_LICENSE_KEY=                   # New Relic license key

# =====================
# External Services
# =====================
GOOGLE_MAPS_API_KEY=                     # Google Maps API key for geocoding
AWS_ACCESS_KEY_ID=                      # AWS Access Key ID
AWS_SECRET_ACCESS_KEY=                  # AWS Secret Access Key
AWS_REGION=us-east-1                    # AWS Region
AWS_S3_BUCKET=ifta-easy-tax             # S3 Bucket for file storage

# =====================
# Development Settings
# =====================
DEBUG=false                              # Enable debug mode
SEED_DB=false                           # Seed database on startup
GENERATE_API_DOCS=true                  # Generate API documentation on startup
